# Kubernetes Secret for sensitive data
# DO NOT commit this file with real values!
# Copy to secret.yaml and replace with base64 encoded values

---
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: reservation-salles
type: Opaque
data:
  # Generate APP_KEY: php artisan key:generate --show | base64
  # Example: base64:xxxxx... -> encode in base64 again for Kubernetes
  app-key: YmFzZTY0OllvdXJBcHBLZXlIZXJlRnJvbUxhcmF2ZWw=  # REPLACE THIS

  # Database password encoded in base64
  # Example: echo -n 'your_password' | base64
  db-password: eW91cl9kYl9wYXNzd29yZF9oZXJl  # REPLACE THIS

  # Redis password (if needed)
  # redis-password: eW91cl9yZWRpc19wYXNzd29yZA==

---
# To create the secret from command line:
# kubectl create secret generic app-secrets \
#   --from-literal=app-key='base64:YOUR_LARAVEL_APP_KEY' \
#   --from-literal=db-password='YOUR_DB_PASSWORD' \
#   --namespace=reservation-salles

# To update an existing secret:
# kubectl delete secret app-secrets -n reservation-salles
# kubectl apply -f secret.yaml

# For production, use Sealed Secrets or External Secrets Operator:
# https://github.com/bitnami-labs/sealed-secrets
# https://external-secrets.io/
